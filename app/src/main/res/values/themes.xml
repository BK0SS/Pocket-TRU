<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PocketTRU" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PocketTRU" parent="Base.Theme.PocketTRU" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen's background color -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Set the icon to be displayed -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Set the theme to be used after the splash screen is dismissed -->
        <item name="postSplashScreenTheme">@style/Theme.PocketTRU</item>
    </style>
</resources>