<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/colorSecondary">

            <LinearLayout
                android:id="@+id/clickable_header_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_id_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course ID"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/adelle_sans_bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/course_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adellesans"
                    android:text="Course Name"/>

            </LinearLayout>
                <ImageView
                    android:id="@+id/arrow_img_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/down"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/course_description_ll"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/course_description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adellesans"
                    android:text="Description"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
